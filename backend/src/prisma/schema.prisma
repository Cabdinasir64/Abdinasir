generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  username     String  @unique
  email        String  @unique
  password     String
  role         String  @default("admin")
  profileImage String?

  @@map("user")
}
