datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum GalleryCategory {
  PROJECT
  PORTFOLIO
  EVENT
  OTHER
}

model user {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  username     String  @unique
  email        String  @unique
  password     String
  role         String  @default("admin")
  profileImage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Skill {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  name       Json
  level      Json
  skillImage String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([level])
  @@map("skills")
}

model Gallery {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  image       String
  title       Json
  description Json?
  categories  GalleryCategory
  link        String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([categories])
  @@map("galleries")
}
