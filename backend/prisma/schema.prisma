datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  username     String  @unique
  email        String  @unique
  password     String
  role         String  @default("admin")
  profileImage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Skill {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  name       Json
  level      Json
  skillImage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([level])
  @@map("skills")
}
