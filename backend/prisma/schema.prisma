datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ProjectCategory {
  PROJECT
  PORTFOLIO
  WEB_DESIGN
  MOBILE_APP
  UI_UX
  MACHINE_LEARNING
  OTHER
}

enum GalleryCategory {
  PROJECT
  PORTFOLIO
  EVENT
  WEB_DESIGN
  MOBILE_APP
  UI_UX
  BRANDING
  PHOTOGRAPHY
  OTHER
}

enum SkillCategory {
  PROGRAMMING
  FRONTEND
  BACKEND
  FRAMEWORK
  DATABASE
  TOOL
  CLOUD
}

model user {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  username     String  @unique
  email        String  @unique
  password     String
  role         String  @default("admin")
  profileImage String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model Skill {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  userId     String
  name       Json
  level      Json
  category   SkillCategory[]
  skillImage String?
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt

  @@index([level])
  @@index([category])
  @@map("skills")
}

model Gallery {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  userId      String
  image       String
  title       Json
  description Json?
  categories  GalleryCategory
  link        String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@index([categories])
  @@map("galleries")
}

model Testimonial {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  name      String
  image     String?
  text      Json
  position  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

model Project {
  id          String            @id @default(auto()) @map("_id") @db.ObjectId
  userID      String            @db.ObjectId
  name        String
  description String
  mainImage   String
  images      String[]
  categories  ProjectCategory[]
  tech        String[]
  link        String?
  status      String?
  likes       Int               @default(0)
  rating      Float             @default(0)
  comments    Int               @default(0)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  views       ProjectView[]

  @@index([categories])
  @@index([tech])
  @@index([name])
  @@map("projects")
}

model ProjectView {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  projectId String   @db.ObjectId
  visitorId String
  rating    Int?
  comment   String?
  createdAt DateTime @default(now())
  project   Project  @relation(fields: [projectId], references: [id])

  @@index([projectId])
  @@index([rating])
  @@map("project_views")
}
